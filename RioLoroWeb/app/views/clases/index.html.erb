<p id="notice"><%= notice %></p>

<h1>Clases</h1>

<table>
  <thead>
    <tr>
      <th>Nombreclase</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clases.each do |clase| %>
      <tr>
        <td><%= clase.nombreClase %></td>
        <td><%= link_to 'Ver ', clase %></td>
        <td><%= link_to 'Editar ', edit_clase_path(clase) %></td>
        <td><%= link_to 'Eliminar ', clase, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Clase', new_clase_path %>
