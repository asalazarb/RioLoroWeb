= form_with(model: orden, local: true) do |form|
  - if orden.errors.any?
    #error_explanation
      h2
        = pluralize(orden.errors.count, "error")
        |  prohibited this orden from being saved:
      ul
        - orden.errors.full_messages.each do |message|
          li
            = message
  .field
    = form.label :nombreOrden
    = form.text_field :nombreOrden, id: :orden_nombreOrden
  .actions
    = form.submit
